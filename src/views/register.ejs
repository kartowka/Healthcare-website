	<link href='http://fonts.googleapis.com/css?family=BenchNine:300,400,700' rel='stylesheet' type='text/css'>


</head>

<body>

	<!-- ====================================================
	header section -->
	<header class="top-header">
		<div class="container">
			<div class="row">
				<div class="col-xs-5 header-logo">
					<br>
					<a href="/"><img src="img/JSAS.png" alt="" class="img-responsive logo"></a>
				</div>

				<div class="col-md-7">
					<nav class="navbar navbar-default">
						<div class="container-fluid nav-bar">
							<!-- Brand and toggle get grouped for better mobile display -->
							<div class="navbar-header">
								<button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
									data-target="#bs-example-navbar-collapse-1">
									<span class="sr-only">Toggle navigation</span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
								</button>
							</div>

							<!-- Collect the nav links, forms, and other content for toggling -->
							<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

								<ul class="nav navbar-nav navbar-right">
									<li><a class="menu" href="/">Home</a></li>
									<li><a class="menu active" a href="login">Login</a></li>
									<li><a class="menu" href="/#about">about us</a></li>
								</ul>
							</div><!-- /navbar-collapse -->
						</div><!-- / .container-fluid -->
					</nav>
				</div>
			</div>
		</div>
	</header> <!-- end of header area -->
	<section class="slider" id="home">
		<div class="container-fluid">
			<div class="row">
				<div id="carouselHacked" class="carousel slide carousel-fade" data-ride="carousel">
					<div class="header-backup"></div>
					<!-- Wrapper for slides -->
					<div class="carousel-inner" role="listbox">
						<div class="item active">
							<img src="img/slide-three.jpg" alt="">
							<div class="carousel-caption">
								<p class="sign" align="">SIGN UP</p>
								<form class="form1">
									<div class="form-group">
										<select name="usertype" class="pass" placeholder="Select Role" id="role"
											onchange="showDiv('role_select', this)" required>
											<option value="" disabled selected>Select Role</option>
											<option value="Doctor">Dr.</option>
											<option value="Patient">Patient</option>
										</select>
									</div>
									<div id='role_select' class="form-group">
										<input type="checkbox" id="clinic1" name="clinic1" value="Clalit">
										<label for="clinic1"> Clalit</label><br>
										<input type="checkbox" id="clinic2" name="clinic2" value="Meuhedet">
										<label for="clinic2"> Meuhedet</label><br>
										<input type="checkbox" id="clinic3" name="clinic3" value="Macabi">
										<label for="clinic3"> Macabi</label><br>
										<input type="checkbox" id="clinic4" name="clinic4" value="Leumit">
										<label for="clinic4"> Leumit</label><br><br>
										<input class="pass" type="text" align="left" placeholder="Medical Licence No."
											id="ml_ID" required>
									</div>
									<div class="form-group">
										<input class="pass" type="text" align="left" placeholder="First Name"
											id="firstname" required>
									</div>
									<div class="form-group">
										<input class="pass " type="text" align="left" placeholder="Middle Name"
											id="middlename">
									</div>
									<div class="form-group">
										<input class="pass " type="text" align="left" placeholder="Last Name"
											id="lastname" required>
									</div>
									<div class="form-group">
										<input class="email " type="email" align="left" placeholder="Email" id="email"
											required>
									</div>

									<div class="form-group">
										<input class="pass" type="password" align="left" placeholder="Password" id="pwd"
											required>
									</div>
									<div class="form-group">
										<input class="pass" type="password" align="left" placeholder="confirm Password"
											id="pwd" required>
									</div>
									<div class="form-group">
										<select name="clinics" class="pass" placeholder="Select Clinic" id="clinic"
											required>
											<option value="" disabled selected>Select Clinic</option>
											<option value="Clalit">Clalit</option>
											<option value="Meuhedet">Meuhedet</option>
											<option value="Macabi">Macabi</option>
											<option value="Leumit">Leumit</option>
										</select>
									</div>
									<div class="form-group">
										<button type="submit" class="submit" align="center" onclick="validate()"
											id="submit">SIGN IN</button>
									</div>

								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		</div>
	</section><!-- end of slider section -->

	<!-- footer starts here -->
	<footer class="footer clearfix">
		<div class="container">
			<div class="row">
				<div class="col-xs-6 footer-para">
					<p>&copy;JSAS All right reserved</p>
				</div>
			</div>
		</div>
	</footer>

