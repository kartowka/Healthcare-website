<!DOCTYPE html>
<html lang="en">

<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style type="text/css">
    table,
    td,
    th {
      border: 1px solid #ddd;
    }

    table {
      margin-left: auto;
      margin-right: auto;
      border-collapse: collapse;
      width: 50%;

    }

    .table-data {
      text-align: center;
      left: 50px;
      top: 50px;
    }

    th,
    td {
      padding: 15px;
    }

    h1 {
      text-align: center;
    }
  </style>
</head>

<body>
  <!--====form section start====-->
  <h1 style="text-align:center">All Integral User Data</h1>
  <div class="table-data">
    <table border="1" style="width:77%" style="text-align:center">
      <tr>
        <th>S.N</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Role</th>
        <th>Clinic</th>
        <th>License ID</th>
        <th style="width:90%">Status</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>

      <% if(users.length!=0){users.forEach(function(data, index){ %>
        <tr>
          <td>
            <%=index+1 %>
          </td>
          <td>
            <%=data.first_name %>
          </td>
          <td>
            <%=data.last_name %>
          </td>
          <td>
            <%=data.email %>
          </td>
          <td>
            <%=data.role %>
          </td>
          <td>
            <%=data.clinic %>
          </td>
          <td>
            <%=data.medical_license_id %>
          </td>
          <td>
            <%=data.status %>
          </td>
          <td>
            <form action="/admin_interface/<%= data.id %>" method="POST">
              <input type="submit" value="Edit">
            </form>
          </td>
          <td>
            <form action="/admin_interface/delete/<%= data.id %>" method="POST">
              <input type="submit" value="Delete">
            </form>
          </td>
        </tr>
        <% }) %>
          <% } else{ %>
            <tr>
              <td colspan="7">No Data Found</td>
            </tr>
            <% } %>
    </table>
    <br>
    <br>

    <div class="forum-data">
      <h1 style="text-align:center">Doctor Validation</h1>
      <table border="1">
        <tr>
          <th>S.N</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>License ID</th>
          <th>Approved?</th>
          <th>Approve</th>
        </tr>

        <% if(users.length!=0){users.forEach(function(data, index){ %>
          <% if(data.role=='doctor' && data.status=='Waiting for Admin Approval' ) { %>
            <tr>
              <td contenteditable='true'>
                <%=index+1 %>
              </td>
              <td>
                <%=data.first_name %>
              </td>
              <td>
                <%=data.last_name %>
              </td>
              <td>
                <%=data.medical_license_id %>
              </td>
              <td>
                <%=data.status %>
              </td>
              <td>
                <form action="/admin_interface/approve/<%= data.id %>" method="POST">
                  <input type="submit" value="Approve">
                </form>
              </td>
            </tr>
            <% } %>
              <% }) %>
                <% } else{ %>
                  <tr>
                    <td colspan="7">No Data Found</td>
                  </tr>
                  <% } %>
      </table>


    </div>
</body>

</html>