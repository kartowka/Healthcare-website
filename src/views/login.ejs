    <body>
        <div class="main">
            <p class="sign" align="center">SIGN IN</p>
            <form class="form1">

                <div class="form-group">
                    <input class="email " type="email" align="center" placeholder="Email" id="email">
                </div>

                <div class="form-group">
                    <input class="pass" type="password" align="center" placeholder="Password" id="pwd">
                </div>

                <button type="submit" class="submit" align="center" onclick="validate()" id="submit">SIGN IN</button>
                <p class="forgot" align="center"><a href="password_reset">Forgot Password?</p>
                <p class="register" align="center"><a href="register">SIGN UP</p>
        </div>
    </body>

